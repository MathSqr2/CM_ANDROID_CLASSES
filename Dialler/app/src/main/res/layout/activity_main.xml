<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/firstLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/input"
            android:textSize="40sp"
            android:textAlignment="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:ems="10" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/secondLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dial_1"
            android:textSize="20sp"
            android:background="@drawable/round_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="numberClicked"
            android:text="1 \n" />

        <Button
            android:id="@+id/dial_2"
            android:textSize="20sp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/round_button"
            android:onClick="numberClicked"
            android:text="2 \nABC" />

        <Button
            android:id="@+id/dial_3"
            android:textSize="20sp"
            android:background="@drawable/round_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="numberClicked"
            android:text="3 \nDEF" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/thirdLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dial_4"
            android:textSize="20sp"
            android:background="@drawable/round_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="numberClicked"
            android:text="4 \nGHI" />

        <Button
            android:id="@+id/dial_5"
            android:textSize="20sp"
            android:background="@drawable/round_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="numberClicked"
            android:text="5 \nJKL" />

        <Button
            android:id="@+id/dial_6"
            android:background="@drawable/round_button"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="numberClicked"
            android:text="6 \nMNO" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/forthLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dial_7"
            android:background="@drawable/round_button"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="numberClicked"
            android:text="7\nPQRS" />

        <Button
            android:id="@+id/dial_8"
            android:background="@drawable/round_button"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="numberClicked"
            android:text="8 \nTUV" />

        <Button
            android:id="@+id/dial_9"
            android:background="@drawable/round_button"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="numberClicked"
            android:text="9 \nWXYZ" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fifthLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dial_extra"
            android:background="@drawable/round_button"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="numberClicked"
            android:text="*\n" />

        <Button
            android:id="@+id/dial_0"
            android:textSize="20sp"
            android:background="@drawable/round_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="numberClicked"
            android:text="0\n+" />

        <Button
            android:id="@+id/dial_hashtag"
            android:textSize="20sp"
            android:background="@drawable/round_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="numberClicked"
            android:text="#\n" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/sixthLL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/call"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="199dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="callNumber"
            android:text="Call"
            android:textColorLink="#209923" />

        <Button
            android:id="@+id/clear"
            style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="numberClicked"
            android:text="Clear" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/seventhhLL"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <Button
            android:id="@+id/fastdial1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="numberClicked"
            android:text="Fast dial 1" />

        <Button
            android:id="@+id/fastdial2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="numberClicked"
            android:text="Fast Dial 2" />

        <Button
            android:id="@+id/fastdial3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="numberClicked"
            android:text="Fast Dial 3" />
    </LinearLayout>

</LinearLayout>